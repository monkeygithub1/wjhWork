	public static void main(String[] args) throws IOException {
		RestClient restClient = new RestClient();
		TEST test = new TEST();
		Request request = new Request();
		Map<String, Object> para = new HashMap<String, Object>();
		para.put("projId", "9f47b521ba474ca6950c83e0e8e72bd8");
		String url = "https://pmistest.womow.cn/pmis/app/ms/file/projFileUpload";
		Map<String, String> headermap = restClient.header();//获取信息头（带cookie）
		
		request.login(headermap, "13910623294");
		headermap.put("Content-Type", "multipart/form-data");
		headermap.put("Content-Disposition", "form-data; name=\"projId\"");
		File file = new File("E:\\tongfang.txt");
		HashMap<String, File> files = new HashMap<String, File>();
		files.put("file", file);
		String closeableHttpResponse = test.post(url, para, files, headermap);
		System.out.println(closeableHttpResponse);
	}
	public String  post(String url, Map<String, Object> fields, HashMap<String, File> files, Map<String, String> headermap) throws ClientProtocolException, IOException{
		CloseableHttpClient httpClient = HttpClients.createDefault();
		CloseableHttpResponse response = null;
		String result = null;
		
		MultipartEntityBuilder entityBuilder = MultipartEntityBuilder.create();
		for (String name : files.keySet()) {
			File file = files.get(name);
			FileBody fileBody = new FileBody(file);
			entityBuilder.addPart(name, fileBody);
		}
		for (String name : fields.keySet()) {
			String value = fields.get(name).toString();
			StringBody StringBody = new StringBody(value, ContentType.TEXT_PLAIN);
			entityBuilder.addPart(name, StringBody);
		}
		HttpPost httpPost = new HttpPost(url);
		for(Map.Entry<String, String> entry : headermap.entrySet()){
			httpPost.addHeader(entry.getKey(), entry.getValue());
		}
		httpPost.setEntity(entityBuilder.build());
		response = httpClient.execute(httpPost);
		HttpEntity resEntity = response.getEntity();
		result = EntityUtils.toString(resEntity);

		return result;
	}

